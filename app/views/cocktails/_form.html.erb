<%= form_for @cocktail do |form| %>
    <div class="form-group">
        <label for="cocktail-name">Name</label>
        <%= form.text_field :name, id: "cocktail-name", class: "form-control", autocomplete: "off" %>
        <small class="form-text text-muted">What's the name of the cocktail?</small>
    </div>
    <div class="form-group">
        <label for="cocktail-ingredients">Ingredients</label>
        <small class="form-text text-muted">Select the ingredients for the cocktail (more than one possible)</small>
        <%= form.text_area :ingredients, id: "cocktail-ingredients", class: "form-control", rows: "3" %>
    </div>
    <%= link_to "Back to Cocktails", cocktails_path, class: "btn btn-danger" %>
    <%= form.submit "Confirm", class: "btn btn-success" %>
<% end %>
