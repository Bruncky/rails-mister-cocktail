<div class="container" style="width: 60%;">
    <%= form_for @cocktail do |form| %>
        <div class="form-group">
            <label for="cocktail-name">Name</label>
            <%= form.text_field :name, id: "cocktail-name", class: "form-control", autocomplete: "off" %>
            <small class="form-text text-muted">What's the name of the cocktail?</small>
        </div>
        <div class="form-group">
            <label for="doses-select">Ingredients</label>
            <select class="form-control" id="doses-select">
                <% Ingredient.all.each do |ingredient| %>
                    <option><%= ingredient.name %></option>
                <% end %>
            </select>
        </div>
        <%= link_to "Back to Cocktails", root_path, class: "btn btn-outline-danger", role: "button" %>
        <%= form.submit "Confirm", class: "btn btn-outline-success" %>
    <% end %>
</div>
